<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightBlue"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/lnr"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:id="@+id/lnr2"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_weight="3"
        >


              <ImageView
                  android:layout_width="30dp"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:id="@+id/location_icon2"
                   android:layout_gravity="center"
                  android:layout_margin="20dp"
                  android:src="@drawable/ic_baseline_location_on_24"
                  ></ImageView>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:text="location_Name"
                  android:textSize="15dp"
                  android:textStyle="bold"

                  android:gravity="center"
                  android:id="@+id/location_name2"
                  android:layout_toRightOf="@+id/location_icon2">

              </TextView>

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:text="Date_Day_Or_Year"
                  android:textSize="15dp"
                  android:layout_margin="6dp"
                  android:gravity="center"
                  android:textStyle="bold"
                  android:layout_below="@+id/location_name2"
                  android:id="@+id/Date_Time2"
                  >

              </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Temp"
            android:gravity="center"
            android:textStyle="bold"
            >

        </TextView>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="2"
                  android:text="Mostly Cloud"
                  android:textSize="15dp"
                  android:paddingLeft="6dp"
                  android:gravity="center"
                  android:layout_below="@+id/Date_Time2"
                  android:textStyle="bold"
                  android:id="@+id/MostlyCloud2"
                  >

              </TextView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="10"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_weight="3"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/Linear_Nav_add"
            android:layout_weight="3">

             <!--<com.google.android.material.navigation.NavigationView

                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="match_parent"
                 android:layout_gravity="start"
                 android:id="@+id/nav"
                 app:menu="@menu/nav_toolbar"
                 android:background="@color/LightBlue"
                 ></com.google.android.material.navigation.NavigationView>-->

              <androidx.appcompat.widget.Toolbar
                  android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_height="match_parent"
                  android:background="@color/LightBlue"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  xmlns:tools="http://schemas.android.com/tools"
                  app:menu="@menu/toolbar"
                  >

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:id="@+id/navbtn"

                      android:src="@drawable/ic_baseline_nav_dehaze_24"
                      ></ImageView>

              </androidx.appcompat.widget.Toolbar>
             <!--<ImageView
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="match_parent"
                 android:scaleType="fitStart"
                 android:src="@drawable/ic_baseline_nav_dehaze_24">

             </ImageView>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"

                android:src="@drawable/ic_baseline_add_24">

            </ImageView>-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:layout_margin="10dp"
            android:weightSum="2"
            android:id="@+id/lnrr2"
            android:visibility="visible"
            android:orientation="horizontal"
            >
             <RelativeLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 >
                  <ImageView
                      android:layout_width="30dp"
                      android:layout_height="30dp"
                      android:id="@+id/location_icon"

                      android:src="@drawable/ic_baseline_location_on_24"
                      ></ImageView>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Delhi"
                     android:textSize="15dp"
                     android:textStyle="bold"

                     android:id="@+id/location_name"
                     android:layout_toRightOf="@+id/location_icon">

                 </TextView>

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="FRI,MAR 5 PM"
                     android:textSize="15dp"
                     android:layout_margin="6dp"
                     android:textStyle="bold"
                     android:layout_marginTop="5dp"
                     android:layout_below="@+id/location_name"
                     android:id="@+id/Date_Time"
                     >

                 </TextView>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:text="Mostly sun"
                     android:textSize="15dp"
                     android:paddingLeft="6dp"
                     android:layout_below="@+id/Date_Time"
                     android:textStyle="bold"
                     android:id="@+id/MostlyCloud"
                    >

                 </TextView>

             </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                >
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_weight="1.2"
                       android:visibility="visible"
                       android:id="@+id/img1"
                       android:padding="3dp"
                       android:background="@drawable/animation_drawable"
                       android:layout_height="60dp"

                       ></ImageView>
                <!--<ImageView
                    android:layout_width="0dp"
                    android:visibility="gone"
                    android:layout_weight="0.7"
                    android:id="@+id/img2"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_cloud_24"
                    ></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:id="@+id/img3"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_cloud_24"
                    ></ImageView>-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="30°C"
                    android:id="@+id/temp"

                    android:textSize="20dp">

                </TextView>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

     <androidx.coordinatorlayout.widget.CoordinatorLayout
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="0dp"
        android:layout_weight="7"
         android:background="@color/LightBlue">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="200dp"
          android:orientation="vertical"
          android:weightSum="10"
          >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:text="Weather Graph upcoming soon..."
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/DarkGray"
                    android:textSize="30dp"
                    ></TextView>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="2.5"
              android:weightSum="6"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:orientation="horizontal"
              >
               <ImageView
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="match_parent"
                   android:src="@drawable/ic_baseline_cloud_24"
                   android:id="@+id/imgg1"
                   android:layout_margin="5dp"
                   ></ImageView>
              <ImageView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_wb_sunny_24"
                  android:id="@+id/imgg2"
                  android:layout_margin="5dp"
                  ></ImageView>
              <ImageView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_cloud_off_new_24"
                  android:id="@+id/imgg3"
                  android:layout_margin="5dp"
                  ></ImageView>
              <ImageView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_cloud_24"
                  android:id="@+id/imgg4"
                  android:layout_margin="5dp"
                  ></ImageView>
              <ImageView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_brightness_4_24"
                  android:id="@+id/imgg5"
                  android:layout_margin="5dp"
                  ></ImageView>
              <ImageView
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_baseline_wb_sunny_24"
                  android:id="@+id/imgg6"
                  android:layout_margin="5dp"
                  ></ImageView>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:orientation="horizontal"
              android:weightSum="6"
              >
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="32°C"
                  android:gravity="center"></TextView>

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="33°C"
                  android:gravity="center"> </TextView>
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="30°C"
                  android:gravity="center"></TextView>
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="34°C"
                  android:gravity="center"></TextView>
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="33°C"
                  android:gravity="center"></TextView>
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:textStyle="bold"
                  android:text="31°C"
                  android:gravity="center"></TextView>



          </LinearLayout>
      </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fmBottomSheet"
        android:background="@drawable/bottomsheet"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    tools:listitem="@layout/example_item"
                    android:id="@+id/rcyview">

                </androidx.recyclerview.widget.RecyclerView>
           </LinearLayout>

    </FrameLayout>

     </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>